{
    "AWSEBDockerrunVersion": 2,

    "containerDefinitions": [
    {
        "name" : "client",
        "image" : "ccollot/client",
        "hostname" : "client",
        "essential" : false
    },
    {
        "name" : "server",
        "image" : "ccollot/server",
        "hostname" : "api",
        "essential" : false
    },
    {
        "name" : "worker",
        "image" : "ccollot/worker",
        "hostname" : "worker",
        "essential" : false
    },
    {
        "name" : "nginx",
        "image" : "ccollot/nginx",
        "hostname" : "nginx",
        "essential" : true,
        "portMappings":[
            {
                "hostPort" : 80,
                "containerPort": 80
            }
        ],
        "links": ["client", "server"]
    }
    ]
  }